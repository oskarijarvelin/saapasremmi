{{!< default}}

  {{> "header"}}

  <div class="row justify-content-center my-5">
    {{#if @blog.logo}}
        <img class="site-logo my-5" src="{{@blog.logo}}" alt="{{@blog.title}}" width="600px" height="auto"/>
    {{else}}
      <h1 class="col-12 display-2 text-center">{{@blog.title}}</h1>
      <h2 class="col-12 display-4 text-center">{{@blog.description}}</h2>
    {{/if}}
  </div>


  <main class="row masonry" data-target=".card" data-col-xs="12" data-col-md="6" data-col-lg="4">
    {{#foreach posts}}
    {{> "post-card"}}
    {{/foreach}}
  </main>

  {{pagination}}
