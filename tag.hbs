{{!< default}}

  {{> "header"}}

  {{#tag}}

  <div class="row my-5">
    <h1 class="col-12 display-4 text-center">{{name}}</h1>
    <h2 class="col-12 text-center">
      {{#if description}}
        {{description}}
      {{else}}
        {{t "Total of"}} {{plural ../pagination.total empty=(t "No articles") singular=(t "1 article") plural=(t "% articles")}}
      {{/if}}
    </h2>
  </div>

  {{/tag}}

  <main class="row masonry" data-target=".card" data-col-xs="12" data-col-md="6" data-col-lg="4">
    {{#foreach posts}}
    {{> "post-card"}}
    {{/foreach}}
  </main>

{{pagination}}
